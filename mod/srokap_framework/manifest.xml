<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Srokap Framework</name>
	<author>Paweł Sroka (srokap@gmail.com)</author>
	<version>1.0</version>
	<description>Provides common abilities for other plugins.</description>
	<website>https://srokap.pl/</website>
	<copyright>(C) Paweł Sroka 2012</copyright>
	<license>http://opensource.org/licenses/BSD-3-Clause</license>
	
	<category>libraries</category>

	<requires>
		<type>elgg_release</type>
		<version>1.8</version>
	</requires>

	<requires>
		<type>php_extension</type>
		<name>curl</name>
	</requires>
	
	<requires>
		<type>php_extension</type>
		<name>Phar</name>
	</requires>
	
	<requires>
		<type>php_extension</type>
		<name>zip</name>
	</requires>
	
	<requires>
		<type>php_ini</type>
		<name>allow_url_fopen</name>
		<value>on</value>
	</requires>


</plugin_manifest>
